<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>My Project - B00124102{% block title %}{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <!-- BOOTSTRAP 5 CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

        <!-- BOOTSTRAP 5 JavaScript Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <ul>
            <li>
                <a href="/">
                    home
                </a>
            </li>
            <li>
                <a href="{{ path ('app_register') }}">
                 register
                </a>
            {% if not app.user('ROLE_USER') %}
            <li>
                <a href="{{ path ('app_login') }}">
                   login
                </a>
                {% endif %}
            </li>
            <li>
                <a href="{{ path ('solicitors_index') }}">
                    Click here to see our statistics
                </a>
            </li>
            {% if is_granted('ROLE_USER') %}
            <li>
                <a href="{{ path ('pricing') }}">
                    Pricing
                </a>
            </li>
            {% endif %}
            {% if is_granted('ROLE_LAWYER') %}
                <li>
                    <a href="{{ path ('regClient') }}">
                        See available clients
                    </a>
                </li>
            {% endif %}
            <li>
                <a href="{{ path ('reviews') }}">
                    Reviews
                </a>
            </li>
        </ul>

        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>

    </body>
</html>
