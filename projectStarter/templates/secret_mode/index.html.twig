{% extends 'base.html.twig' %}

{% block title %}SecretMode index{% endblock %}

{% block body %}
    <h1>SecretMode index</h1>
<body style="background-color:red;">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Daredevil</th>
                <th>SuccessfulNights</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for secret_mode in secret_modes %}
            <tr>
                <td>{{ secret_mode.id }}</td>
                <td>{{ secret_mode.Daredevil ? 'Yes' : 'No' }}</td>
                <td>{{ secret_mode.SuccessfulNights }}</td>
                <td>
                    <a href="{{ path('secret_mode_show', {'id': secret_mode.id}) }}">show</a>
                    <a href="{{ path('secret_mode_edit', {'id': secret_mode.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('secret_mode_new') }}">Create new</a>
{% endblock %}
